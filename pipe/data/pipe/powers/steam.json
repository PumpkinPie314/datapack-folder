                    "type": "origins:and",
                    "actions": [
                        {
                            "type": "origins:if_else",
                            "if_action": {
                                "type": "origins:change_resource",
                                "operation": "add",
                                "resource": "*:*_resource",
                                "change": -1
                            },
                            "condition": {
                                "type": "origins:constant",
                                "value": true
                            }
                        },
                        {
                            "type": "origins:if_else",
                            "if_action": {
                                "type": "origins:change_resource",
                                "operation": "add",
                                "resource": "*:*_resource",
                                "change": -1
                            },
                            "condition": {
                                "type": "origins:biome",
                                "condition": {
                                    "type": "origins:temperature",
                                    "comparison": "<",
                                    "compare_to": 2.0
                                }
                            }
                        },
                        {
                            "type": "origins:if_else",
                            "if_action": {
                                "type": "origins:change_resource",

{
	"type":"origins:multiple",
	"fill":{
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type":"origins:and",
            "actions":[
                {
                    "type": "origins:change_resource",
                    "resource": "robot:nightvision_time",
                    "change": 30
                },
                {
                    "type": "origins:apply_effect",
                    "effect": {
                      "effect": "minecraft:night_vision",
                      "duration": 730,
                      "is_ambient": false,
                      "show_particles": false,
                      "show_icon": true
                    }
                },
                {
                    "type": "origins:execute_command",
                    "command": "clear Pumpkin314 minecraft:glowstone_dust 1",
                    "permission_level": 4
                },
                {
					"type":"origins:play_sound",
					"sound": "minecraft:block.note_block.bell",
                    "pitch": 1.5,
                    "volume": 0.2
				},
                {
					"type":"origins:delay",
					"ticks":4,
					"action": {
                        "type":"origins:play_sound",
                        "sound": "minecraft:block.note_block.bell",
                        "pitch": 2
                    },
                    "volume": 0.2
                }
            ]
        },
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:command",
                    "command": "clear Pumpkin314 minecraft:glowstone_dust 0",
                    "comparison": ">",
                    "compare_to": 0
                },
                {
                    "type": "origins:in_block",
                    "block_condition": {
                      "type": "origins:and",
                      "conditions": [
                        {
                            "type": "origins:light_level",
                            "light_type": "sky",
                            "comparison": "<",
                            "compare_to": 5
                        },
                        {
                            "type": "origins:light_level",
                            "light_type": "block",
                            "comparison": "<",
                            "compare_to": 5
                        }
                      ]
                    }
                },
                {
                    "type": "origins:resource",
                    "resource": "robot:nightvision_time",
                    "comparison": "==",
                    "compare_to": 0
                }
            ]
        }
    },
	"tick":{
        "type": "origins:action_over_time",
        "interval": 20,
        "entity_action": {
            "type":"origins:and",
            "actions":[
                {
                    "type": "origins:change_resource",
                    "resource": "robot:nightvision_time",
                    "change": -1
                }
            ]
        },
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "resource": "robot:nightvision_time",
                    "comparison": "!=",
                    "compare_to": 0
                }
            ]
        }
    },
	"name":"Head lights",
	"description":"when its dark, your body consumes glowstone to give you night vision for a short while"
}